<%= form_tag(controller: "departure", action: "getFromToStops", method: "post") do %>
  <%= hidden_field_tag(:select_date, @userSelectedDate) %>
  <%= hidden_field_tag(:select_route, @userSelectedRoute) %>
  <%= hidden_field_tag(:select_route_variant, @userSelectedRouteVariant) %>
  <%= label_tag(:select_from_stop_label, "Pick a route variant:") %>
  <%= select_tag(:select_from_stop, options_for_select(@stop_values)) %>
  </br>
  <%= label_tag(:select_to_stop_label, "Pick a route variant:") %>
  <%= select_tag(:select_to_stop, options_for_select(@stop_values)) %>
  </br>

  <%= submit_tag("Submit form") %>
<% end %>
